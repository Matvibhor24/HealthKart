<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF9FF"
    tools:context=".SignUpScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hk_logo" />
    <TextView
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginHorizontal="45dp"
        android:fontFamily="@font/kinetica_bold"
        android:textColorHighlight="#3b3d4a"
        android:text="Register"
        android:textColor="#195A80"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_password" />

<!--    <EditText-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:text="UserName"-->
<!--        android:textSize="20sp"-->
<!--        android:padding="20dp"-->
<!--        android:fontFamily="@font/kinetica_bold"-->
<!--        android:textColor="#195A80"-->
<!--        android:clickable="true"-->
<!--        android:focusable="true"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/imageView2"-->
<!--        app:layout_constraintEnd_toEndOf="parent"/>-->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginHorizontal="45dp"
        android:drawableStart="@drawable/ic_user_icon"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="#195A80"
        android:elevation="4sp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/noyhslimr_bold"
        android:background="@drawable/edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:hint="Email"
        android:drawableStart="@drawable/ic_email_icon"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:textColor="#195A80"
        android:layout_marginTop="20dp"
        android:elevation="4sp"
        android:fontFamily="@font/noyhslimr_bold"
        android:background="@drawable/edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginHorizontal="45dp"
        android:drawableStart="@drawable/ic_password_icon"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:padding="10dp"
        android:elevation="4sp"
        android:textColor="#195A80"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noyhslimr_bold"
        android:background="@drawable/edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_marginHorizontal="45dp"
        android:drawableStart="@drawable/ic_password_icon"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:textColor="#195A80"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noyhslimr_bold"
        android:padding="10dp"
        android:elevation="4sp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>